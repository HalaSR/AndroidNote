<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".jetpack.MainJetpackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnViewModel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="viewModel"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="plus"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="clear"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnPlusPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="post test"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnRoomInsert"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomInsert"/>

        <Button
            android:id="@+id/btnRoomUpdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomUpdate"/>

        <Button
            android:id="@+id/btnRoomQuery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomQuery"/>

        <Button
            android:id="@+id/btnRoomClear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomClear"/>

        <Button
            android:id="@+id/btnRoomInsert2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomInsert2"/>

        <Button
            android:id="@+id/btnRoomQuery2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomQuery2"/>

        <Button
            android:id="@+id/btnRoomClear2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="roomClear2"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>